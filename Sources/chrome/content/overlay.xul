			<image id="selfscroll_icon3" src="chrome://selfscroll/content/red.png" onclick="selfscroll.click(event, 3)" />
		</statusbarpanel>
		<statusbarpanel id="selfscroll_status4" tooltip="selfscroll-statusbar-tooltip">
			<image id="selfscroll_icon4" src="chrome://selfscroll/content/red.png" onclick="selfscroll.click(event, 4)" />
		</statusbarpanel>
		<statusbarpanel id="selfscroll_status5" tooltip="selfscroll-statusbar-tooltip">
			<image id="selfscroll_icon5" src="chrome://selfscroll/content/red.png" onclick="selfscroll.click(event, 5)" />
		</statusbarpanel>
		<statusbarpanel id="selfscroll_status6" tooltip="selfscroll-statusbar-tooltip">
			<image id="selfscroll_icon6" src="chrome://selfscroll/content/red.png" onclick="selfscroll.click(event, 6)" />
